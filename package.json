{
  "publisher": "simonhe",
  "name": "vscode-transfer",
  "displayName": "VSCode Transfer - Content Transformation Extension",
  "version": "0.0.14",
  "packageManager": "pnpm@8.15.9",
  "description": "A lightweight Visual Studio Code extension for quick content transformation, including JSON formatting, case conversion, and naming convention adjustments.",
  "author": "Simon He <https://github.com/Simon-He95>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/vscode-transfer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simon-He95/vscode-transfer"
  },
  "bugs": {
    "url": "https://github.com/Simon-He95/vscode-transfer/issues"
  },
  "sponsor": {
    "url": "https://github.com/Simon-He95/sponsor"
  },
  "keywords": [
    "vscode",
    "transfer",
    "json",
    "case conversion",
    "camelCase",
    "PascalCase",
    "kebab-case",
    "string manipulation",
    "text transformation",
    "developer tools",
    "productivity"
  ],
  "categories": [
    "Formatters",
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "submenus": [
      {
        "id": "vscode-transfer",
        "label": "vscode transfer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "vscode-transfer",
          "when": "editorHasSelection",
          "group": "6_px"
        }
      ],
      "vscode-transfer": [
        {
          "command": "transfer.toJSON"
        },
        {
          "command": "transfer.uppercase"
        },
        {
          "command": "transfer.lowercase"
        },
        {
          "command": "transfer.objToStr"
        },
        {
          "command": "transfer.strToObj"
        },
        {
          "command": "transfer.reverse"
        },
        {
          "command": "transfer.camel"
        },
        {
          "command": "transfer.hyphen"
        }
      ]
    },
    "commands": [
      {
        "command": "transfer.toJSON",
        "title": "json格式化"
      },
      {
        "command": "transfer.uppercase",
        "title": "转化为大写"
      },
      {
        "command": "transfer.lowercase",
        "title": "转化为小写"
      },
      {
        "command": "transfer.objToStr",
        "title": "对象转化为字符串"
      },
      {
        "command": "transfer.strToObj",
        "title": "字符串转化为对象"
      },
      {
        "command": "transfer.reverse",
        "title": "字符串颠倒"
      },
      {
        "command": "transfer.camel",
        "title": "转化为驼峰命名"
      },
      {
        "command": "transfer.bigCamel",
        "title": "转化为大驼峰命名"
      },
      {
        "command": "transfer.hyphen",
        "title": "转换为连字符(-)"
      },
      {
        "command": "transfer.transfer",
        "title": "唤起 vscode-transfer",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "dev": "pnpm build --watch",
    "test": "vitest",
    "build": "tsup src/index.ts --external vscode",
    "pack": "vsce package --no-dependencies",
    "lint": "eslint --cache",
    "lint:fix": "pnpm lint --fix",
    "publish": "vsce publish --no-dependencies",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm run publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@types/node": "^18.19.110",
    "@types/vscode": "1.77.0",
    "@vscode-use/utils": "^0.1.58",
    "@vscode/vsce": "^3.4.2",
    "bumpp": "^9.11.1",
    "eslint": "^9.28.0",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.8.3",
    "vitest": "^0.29.8"
  }
}
